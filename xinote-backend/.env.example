# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://xinote_user:secure_password@localhost:5432/xinote_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=xinote_db
DB_USER=xinote_user
DB_PASSWORD=secure_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-too
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-me

# OpenAI API (Whisper & GPT-4 for report generation)
OPENAI_API_KEY=sk-your-openai-api-key-here
WHISPER_MODEL=whisper-1
WHISPER_LANGUAGE=fr
WHISPER_TEMPERATURE=0
GPT_MODEL=gpt-4
GPT_TEMPERATURE=0.3

# S3/Storage Configuration (MinIO or AWS S3)
STORAGE_TYPE=s3
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET_NAME=xinote-recordings
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_USE_SSL=false

# AWS S3 (if using AWS instead of MinIO)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=eu-west-1
# S3_BUCKET_NAME=xinote-recordings-prod

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_UPLOAD_MAX=10

# File Upload Limits
MAX_FILE_SIZE=104857600
ALLOWED_AUDIO_FORMATS=m4a,aac,mp3,wav

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://xinote.app
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/xinote.log

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=1800000

# Medical Data Retention (in days)
DATA_RETENTION_DAYS=2555

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Report Generation
REPORT_STORAGE_BUCKET=xinote-reports
REPORT_TEMPLATE_PATH=./templates/rapport_template.html

# Feature Flags
ENABLE_BIOMETRIC_2FA=true
ENABLE_AUDIT_LOGS=true
ENABLE_DATA_ENCRYPTION=true
ENABLE_REPORT_GENERATION=true
